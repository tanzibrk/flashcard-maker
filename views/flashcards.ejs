<%- include('partials/header') %>

<h2 class="mb-4">Your Flashcards</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% if (flashcards.length === 0) { %>
    <p class="text-muted">No flashcards found. Create one!</p>
  <% } else { %>
    <% flashcards.forEach(card => { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= card.question %></h5>
            <p class="card-text">Answer: <%= card.answer %></p>
            <p class="badge bg-primary"><%= card.subject %></p>
          </div>
          <div class="card-footer text-end">
            <a href="/flashcards/<%= card._id %>/edit" class="btn btn-sm btn-outline-secondary me-2">Edit</a>
            <form action="/flashcards/<%= card._id %>/delete" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-outline-danger"
                onclick="return confirm('Are you sure you want to delete this flashcard?');">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    <% }); %>
  <% } %>
</div>

<%- include('partials/footer') %>
